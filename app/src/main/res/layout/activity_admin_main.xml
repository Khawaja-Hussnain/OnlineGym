<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Admin.AdminMainActivity"
    android:background="@drawable/background"
    android:weightSum="10">

    <ImageView
        android:id="@+id/logout"
        android:layout_width="25dp"
        android:layout_height="0dp"
        android:src="@drawable/logoutblue"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:layout_weight="0.5"
        android:layout_gravity="end"/>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:src="@drawable/gym"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        />


    <TextView
        android:id="@+id/hellotadmin"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Hello User!"
        android:textSize="20sp"
        android:layout_weight="0.5"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.5"
        android:weightSum="2"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/desctext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find A"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/rightdesctext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Workout"
            android:textColor="@color/bluebutton"
            android:textSize="25sp"
            android:layout_weight="1" />
    </LinearLayout>
    <ImageView
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/pic"
        android:layout_weight="2.5"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/graysh"
        app:tabSelectedTextColor="@color/solidbutton"
        app:tabIndicatorColor="@color/solidbutton"
        app:tabTextColor="@color/solidbutton"
        android:layout_weight="0.8"/>

   <androidx.viewpager.widget.ViewPager
       android:id="@+id/adminviewpager"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="4.2"
       android:layout_margin="10dp"/>



</LinearLayout>